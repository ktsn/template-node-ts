{
  "name": "template-node-ts",
  "version": "1.0.0",
  "author": "katashin",
  "private": true,
  "description": "A project template for a Node.js library using TypeScript",
  "keywords": [
    "template",
    "TypeScript",
    "Node.js"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/ktsn/template-node-ts",
  "bugs": "https://github.com/ktsn/template-node-ts/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn/template-node-ts.git"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run test && npm run build",
    "clean": "rm -rf lib",
    "build": "tsc -p src",
    "dev": "npm run test:unit -- -w",
    "lint": "tslint -p . && prettier --list-different \"{src,scripts,test}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,scripts,test}/**/*.{js,ts}\"",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha --require espower-typescript/guess test/**/*.ts"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/power-assert": "1.4.29",
    "espower-typescript": "^8.1.3",
    "mocha": "^5.0.1",
    "power-assert": "^1.4.4",
    "prettier": "1.11.0",
    "tslint": "^5.9.1",
    "tslint-config-ktsn": "^2.1.0",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "^2.7.2"
  }
}
