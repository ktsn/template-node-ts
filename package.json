{
  "name": "template-node-ts",
  "version": "1.0.0",
  "author": "katashin",
  "private": true,
  "description": "A project template for a Node.js library using TypeScript",
  "keywords": [
    "template",
    "TypeScript",
    "Node.js"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/ktsn/template-node-ts",
  "bugs": "https://github.com/ktsn/template-node-ts/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn/template-node-ts.git"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run test && npm run build",
    "clean": "rm -rf lib",
    "build": "tsc -p src",
    "dev": "jest --watch",
    "lint": "eslint --ext js,ts src test",
    "lint:fix": "eslint --fix --ext js,ts src test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/.+\\.spec\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "eslint": "^5.3.0",
    "eslint-config-ktsn-typescript": "^2.0.0",
    "jest": "^23.5.0",
    "prettier": "1.18.2",
    "prettier-config-ktsn": "^1.0.0",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1"
  }
}
