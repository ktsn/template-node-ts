{
  "name": "template-node-ts",
  "version": "1.0.0",
  "author": "katashin",
  "private": true,
  "description": "A project template for a Node.js library using TypeScript",
  "keywords": [
    "template",
    "TypeScript",
    "Node.js"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/ktsn/template-node-ts",
  "bugs": "https://github.com/ktsn/template-node-ts/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktsn/template-node-ts.git"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run test && npm run build",
    "clean": "rm -rf lib",
    "build": "tsc -p src",
    "dev": "jest --watch",
    "lint": "eslint --ext js,ts src test",
    "lint:fix": "eslint --fix --ext js,ts src test",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "eslint": "^6.3.0",
    "eslint-config-ktsn-typescript": "^2.1.1",
    "jest": "^26.0.1",
    "prettier": "2.0.5",
    "prettier-config-ktsn": "^1.0.0",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.2"
  }
}